package capgemini.day5;

//Write a program to remove characters from a string

public class Removecharactersfromstring {

	public static void main(String[] args) {
		StringBuilder S1 =new StringBuilder("India India");
		char S2 = 'a';
		
		for(int i =0;i<S1.length();i++) {
			if(S1.charAt(i) == S2) {
				S1.deleteCharAt(i);
			}
		}
		System.out.println("After removing the words: " +S1);
	}

}
